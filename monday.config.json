{
  "app": {
    "client_id": "your-monday-app-client-id",
    "app_id": "your-monday-app-id",
    "app_name": "Feed Assurance Slack Integration",
    "app_description": "Integración automática entre Slack y Monday para el equipo de Feed Assurance",
    "app_url": "https://your-deployment-url.com",
    "start_oauth_uri": "/oauth/start",
    "redirect_uri": "/oauth/callback",
    "permissions": [
      "boards:read",
      "boards:write",
      "items:read",
      "items:write",
      "webhooks:write"
    ],
    "features": [
      {
        "type": "webhook",
        "name": "Estado cambiado",
        "description": "Detecta cuando el estado de un ítem cambia",
        "path": "/monday/webhook",
        "conditions": {
          "columnId": "estado",
          "boardId": "${config.monday.boardId}"
        }
      }
    ]
  },
  "development": {
    "base_url": "http://localhost:3000",
    "board_id": "${config.monday.boardId}"
  },
  "production": {
    "base_url": "https://your-production-url.com",
    "board_id": "${config.monday.boardId}"
  }
}
